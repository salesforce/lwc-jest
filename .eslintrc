{
    "root": true,
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "node": true,
        "jest": true
    },
    "parserOptions": {
        "ecmaVersion": 9
    },
    "rules": {
        "strict": ["error", "global"]
    },
    "overrides": [
        {
            "files": ["src/lightning-stubs/**"],
            "parser": "babel-eslint",
            "parserOptions": {
                "sourceType": "module"
            },
            "env": {
                "browser": true
            }
        }
    ]
}
