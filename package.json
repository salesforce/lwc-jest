    "release": "npm publish --access public",
    "test": "jest"
  },
  "dependencies": {
    "@lwc/compiler": "0.34.8",
    "@lwc/engine": "0.34.8",
    "@lwc/jest-preset": "0.34.8",
    "@lwc/jest-resolver": "0.34.8",
    "@lwc/jest-serializer": "0.34.8",
    "@lwc/jest-transformer": "0.34.8",
    "@lwc/module-resolver": "0.34.8",
    "@lwc/wire-service": "0.34.8",
    "@salesforce/wire-service-jest-util": "^2.2.5",
    "chalk": "^2.3.0",
    "glob": "^7.1.2",
    "jest": "~23.6.0",
    "yargs": "^10.0.3"
  },
  "devDependencies": {
    "eslint": "^5.9.0",
    "isbinaryfile": "^3.0.3"
  }
}
